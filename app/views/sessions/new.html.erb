<html>
    
    <head>
        <% content_for :title, "Log In" %>
        <%= javascript_include_tag "session-bundle" %>
    </head>
    
    <div class="login">
      <div class="title">
        <p>Log In</p>
      </div>

      <%= form_for User.new do |f| %>
          <%= f.hidden_field :name, :id => "name" %>    
          <%= f.email_field :username, :placeholder => "Email/Username", :id => "email" %>
          <%= f.password_field :password, :placeholder => "Password", :id => "password"%>
          <%= f.submit "Log In", class: "submitButton"  %>
      <% end %>    

      <p id="canreset"></p>
      <div id= "forgotpw">
          <a onclick="resetpassword()" href="javascript:void(0);">Reset Password</a>
      </div>
    </div>
    
    <div class="verify">
      <p class = "update">Account not Verified. Check for verification code in email</p>
      <p class="verTitle">Verification Code</p>
      <input type="text" name="verCode" id="verCode">
      <p id="update"></p>
      <div class="verButton">
        <a href="forsale" class="verLink">Verify</a> 
        <a href="verify" class="resend">Resend</a> 
      </div>
    </div>
    
</html>